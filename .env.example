# ==============================================
# WORKLENZ ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values
# Docker Compose will automatically load variables from .env file

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
VITE_API_URL=http://localhost:3302
VITE_SOCKET_URL=ws://localhost:3302

# ==============================================
# BACKEND CONFIGURATION
# ==============================================

# Server Configuration
NODE_ENV=production

# Database Configuration
DB_HOST=worklenz_db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=worklenz_db
DB_MAX_CLIENTS=20
USE_PG_NATIVE=false

# ==============================================
# SECURITY & SESSION
# ==============================================
# Generate strong random strings for these secrets
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

SESSION_NAME=worklenz.sid
SESSION_SECRET=your_session_secret_here_min_32_chars
COOKIE_SECRET=your_cookie_secret_here_min_32_chars
JWT_SECRET=your_jwt_secret_here_min_32_chars

# ==============================================
# CORS CONFIGURATION
# ==============================================
SERVER_CORS=http://localhost:3301
FRONTEND_URL=http://localhost:3301
SOCKET_IO_CORS=http://localhost:3301

# ==============================================
# STORAGE CONFIGURATION (MinIO/S3)
# ==============================================
STORAGE_PROVIDER=s3
S3_URL=http://worklenz_minio:9000
S3_BUCKET=worklenz-attachments
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_REGION=us-east-1

# ==============================================
# AWS CONFIGURATION
# ==============================================
AWS_REGION=us-east-1
ENABLE_EMAIL_CRONJOBS=false

# ==============================================
# GOOGLE OAUTH CONFIGURATION
# ==============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Required for Google Sign-In functionality

GOOGLE_CLIENT_ID=fill-in
GOOGLE_CLIENT_SECRET=fill-in
GOOGLE_CALLBACK_URL=http://localhost:3302/auth/google/callback

# ==============================================
# SERVER URLS (Optional)
# ==============================================
PRODUCTION_SERVER_URL=http://localhost:3302
UAT_SERVER_URL=
DEV_SERVER_URL=
